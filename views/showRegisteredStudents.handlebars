
<div class="conteudo-box">
    <div class="conteudo-boxInner">
  <form class="" action="/users/setOffered" method="post">
    <input type="hidden" name="id" value="{{companyid}}">
    <table id="example" class="display" width="100%" cellspacing="0" >
          <thead>
              <tr>
                  <th>Select</th>
                  <th>Roll No</th>
                  <th>Name</th>
                  <th>Course</th>
                  <th>Email</th>

                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
            {{#each result}}
              <tr>
                  <td><input type="checkbox" name="studentList" value="{{this.email}}"> </td>
                  <td>{{this.rollno}}</td>
                  <td>{{this.name}}</td>
                  <td>B.TECH-{{this.branch}}</td>
                  <td>{{this.email}}</td>

                  <td>
                    <button class="btn btn-sm btn-primary">View</button>&nbsp;&nbsp;
                  </td>
              </tr>
                {{/each}}
            </tbody>

      </table>
      <button type="submit" class="btn btn-lg btn-success pull-right" style="margin-top:25px;">Mark Selected Students as Offered</button>
    </form>
  </div>
</div>
<script>
/* Custom filtering function which will search data in column four between two values */
$(document).ready(function(){
    $('#example').DataTable();
});
</script>
